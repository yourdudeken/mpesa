{
    "name": "yourdudeken/mpesa",
    "description": "A comprehensive PHP package for Safaricom M-Pesa DARAJA API integration",
    "type": "library",
    "keywords": [
        "mpesa",
        "safaricom",
        "daraja",
        "stk-push",
        "b2c",
        "b2b",
        "c2b",
        "b2pochi",
        "transactions",
        "api",
        "payment",
        "kenya"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "SmoDav",
            "email": "smodavprivate@gmail.com"
        },
        {
            "name": "Kennedy Muthengi",
            "email": "kenmwendwamuthengi@gmail.com"
        }
    ],
    "homepage": "https://github.com/yourdudeken/mpesa",
    "support": {
        "issues": "https://github.com/yourdudeken/mpesa/issues",
        "source": "https://github.com/yourdudeken/mpesa"
    },
    "autoload": {
        "psr-4": {
            "Yourdudeken\\Mpesa\\": "src/Mpesa/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yourdudeken\\Mpesa\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "check": [
            "composer validate --strict",
            "composer dump-autoload -o"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}